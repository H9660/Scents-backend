{
  "compilerOptions": {
    "module": "NodeNext",               // ESM-compatible modules
    "moduleResolution": "nodenext",     // Resolves ESM paths correctly
    "rootDir": "./",
    "outDir": "./dist",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,            // Ensures compatibility with CommonJS modules
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ES2020"                  // Modern syntax support
  },
  "include": ["./**/*.ts", "utils/emailClient.js", "utils/emailClient.js"],
  "exclude": ["node_modules", "dist"]
}
